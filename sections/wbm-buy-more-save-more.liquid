<div class="ai_ml_section_cnt" style="background-color:{{ section.settings.background-color }}">
	<div class="page-width ai_ml_inner_cnt row">	
      {% if section.settings.title != blank %}
        <div class="bmsm-content-main-title-cnt ai_ml_align_center ai_ml_margin_center columns medium-6 small-12">      
    			<h1>{{ section.settings.title }}</h1>
        </div>
      {% endif %}   
      
      {% if section.settings.content != blank %}
        <div class="columns medium-6 small-12">      
                {% if section.settings.content != blank %}
    			{{ section.settings.content }}
    			{% endif %}	
        </div>
      {% endif %}   
  
  <div class="ai_ml_clear"></div>					

    </div>    
			
</div>


{% schema %}
  {
    "name": "Buy More Section",  
    "tag": "section",
    "class": "ai_ml_section",
    "settings": [
      {
        "type": "color",
        "id": "background-color",
        "label": "Background Color"
      },
 	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "text"
      },
 	  {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title",
        "default": "text"
      },      
	  {
        "type": "richtext",
        "id": "content",
        "label": "Text",
        "default": "<p>text</p>"
      }, 
	  {
        "type": "text",
        "id": "classes",
        "label": "Classes"
      }      
    ],
    "presets": [
      {
        "name": "Buy More Section",
        "category": "WBM Blocks"
      }
    ]
	}
{% endschema %}

