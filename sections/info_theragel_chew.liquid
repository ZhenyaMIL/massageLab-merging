<div class="page-width">
  <div class="aboutus-information grid--1-col-tablet-down grid--2-col-desktop grid image-position-{{ section.settings.image_position }}">
    
    <div class="information-container grid__item">
       {% if section.settings.heading != blank %}
        <div class="title-container section-header">
          <h2 class="heading">{{ section.settings.heading }}</h2>
        </div>
       {% endif %}
       {% if section.settings.info != blank %}
        <div class="list-Aboutus-info rte">
          {{ section.settings.info }}
        </div>
       {% endif %}
        {% if section.settings.about_btn != blank %}
        <div class="about-btn">
          <a href="JavaScript:void(0);" class="btn btn-large  button getmytheragel">
            {{ section.settings.about_btn }}
          </a>
        </div>
        {% endif %}
    </div>
    {% if section.blocks.size > 0 %}
      <div class="aboutus-info grid__item">
        <div class="heading-part">
          <span class="heading"></span>
          <span class="heading">{{ section.settings.first_column }}</span>
          <span class="heading">{{ section.settings.second_column }}</span>
        </div>
        <div class="info-container">
          
          <div class="features-name">
            <ul>
              {%- for block in section.blocks -%}
                <li>{{ block.settings.title }}</li>
              {%- endfor -%}
              {% comment %} <li>360Â° coverage</li>
              <li>Light obscuration</li>
              <li>Stretchable</li>
              <li>Lower neck & eye coverage</li>
              <li>Easy to sleep with</li>
              <li>100% natural method</li>
              <li>Satisfaction guarantee</li> {% endcomment %}
            </ul>
          </div>
          <div class="features-value">
            
            <div class="our">
              <ul>
              {% assign checkmarks = section.blocks.size %}

              {% for checkmark in (1..checkmarks) %}
                <li><span>{%- render 'icon-checkmark' -%}</span></li>
              {% endfor %}
              </ul>
            </div>
            
            <div class="other">
              <ul>
                {% for checkmark in (1..checkmarks) %}
                  <li><span class="icon-close-small">{%- render 'icon-close-small' -%}</span></li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

  </div>
</div>

<style>
.spr .about-btn a {
  border-radius: 50px;
}
</style>

{% schema %}
  {
    "name": "Information of Theragel",
    "tag": "section",
	"class": "infotheragel-section spr aboutus-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "We Have Everything You Need ?"
      },
      {
        "type": "html",
        "id": "info",
        "label": "Description",
        "default": "<p>Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs. The passage is attributed to an unknown typesetter in the 15th century who is thought to have scrambled parts of Cicero's De Finibus Bonorum et Malorum for use in a type specimen book.Lorem ipsum.</p>"
      },
      {
        "type": "text",
        "id": "about_btn",
        "label": "Button Label",
        "default": "Contact Us"
      },
      {
        "type": "text",
        "id": "first_column",
        "label": "First column",
        "default": "Theragel"
      },
      {
        "type": "text",
        "id": "second_column",
        "label": "Second column",
        "default": "Other"
      }
	],
  "blocks": [
    {
      "name": "Feature",
      "type": "feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature"
        }
      ]
    }
  ],
	"presets": [
      {
        "name": "Information of Theragel"
      }
    ]
  }
{% endschema %}
