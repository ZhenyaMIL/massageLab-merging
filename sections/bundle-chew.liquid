  <script>
    document.addEventListener('DOMContentLoaded', function() {
      let buttonsAddBundle = document.querySelectorAll('#bundle-chew button[data-variant-id]');

      buttonsAddBundle.forEach(button => {
        button.addEventListener('click', () => {
          let buttonId = button.getAttribute("data-variant-id").trim();
          let productVariant = document.querySelector(`input[value="${buttonId}"]`);
          let variantButton = productVariant.parentNode;
          let addTocartButton = document.querySelector('span[data-add-to-cart-text]');
          let addTocartButtonWrapper = addTocartButton.parentNode;

          variantButton.click();
          addTocartButton.click();
          addTocartButtonWrapper.style = "transform: scale(1.3)";
          setTimeout(()=> {
            addTocartButtonWrapper.style = "transform: scale(1)";
          },500)
        });
      });
    });
  </script>

