      },
      {
        "type": "header",
        "content": "column 1"
      },
      {
        "type": "range",
        "id": "value1",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Value",
        "default": 50
      },
      {
        "type": "text",
        "id": "itemheading1",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "itemtext1",
        "label": "Sub Title",
        "default": "Sub Title"
      },
	  {
        "type": "header",
        "content": "column 2"
      },
      {
        "type": "range",
        "id": "value2",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Value",
        "default": 50
      },
      {
        "type": "text",
        "id": "itemheading2",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "itemtext2",
        "label": "Sub Title",
        "default": "Sub Title"
      },
      {
        "type": "header",
        "content": "column 3"
      },
      {
        "type": "range",
        "id": "value3",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Value",
        "default": 50
      },
      {
        "type": "text",
        "id": "itemheading3",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "itemtext3",
        "label": "Sub Title",
        "default": "Sub Title"
      }
      
	],
	"presets": [
      {
        "name": "Video With Text"
      }
    ]
  }
