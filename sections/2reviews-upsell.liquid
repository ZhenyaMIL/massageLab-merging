<div class="reviewupsellblock {% if section.settings.bgimage %}reviewupsellimage lazyload{% else %}reviewupsellcolor{% endif %}"
    {% if section.settings.bgimage %}style="background-image:url('{{ section.settings.bgimage | img_url: 'master' }}')"{% endif %}>
  <div class="pagewidth">
    <div class="reviewupsell-information">    
      <div class="information-container">
         {% if section.settings.heading != blank %}
          <div class="title-container section-header">
            <h2 class="heading">{{ section.settings.heading }}</h2>
          </div>
         {% endif %}
          {% if section.settings.btn_text != blank %}
          <div class="reviewupsell-btn">
            <a {% if block.settings.btn_link != blank %}href="{{ block.settings.btn_link }}"{% else %}role="link" {% endif %} class="btn button">
              {{ section.settings.btn_text }}
            </a>
          </div>
          {% endif %}
      </div>
      {% if section.settings.image != blank %}
      <div class="reviewupsell-banner">
        <div class="image-container">
          <img class="lazyload"
                 data-src="{{ section.settings.image | img_url: 'master' }}"
                 alt="Image">
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>

<style type="text/css">
  #shopify-section-{{ section.id }} .reviewupsellblock.reviewupsellcolor{
    background: {{ section.settings.reviews_background }};
  }
  #shopify-section-{{ section.id }} .reviewupsellblock{
    padding: {{ section.settings.reviews_padding }}px 0;
  }
  #shopify-section-{{ section.id }} .reviewupsellblock .title-container .heading{
    color: {{ section.settings.textcolor1 }};
  }
</style>


{% schema %}
  {
    "name": "Review Upsell",
    "tag": "section",
	"class": "reviewupsell-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "bgimage",
        "label": "Background Image",
        "info": "Size: 1920px X 850px"
      },
      {
        "type": "color",
        "id": "reviews_background",
        "label": "Background Color",
        "default": "#f0f4f4"
      },
      {
        "type": "range",
        "id": "reviews_padding",
        "min": 0,
        "max": 200,
        "step": 5,
        "label": "Internal Top & Bottom Space/Padding",
        "default": 55
      },
      {
        "type": "color",
        "id": "textcolor1",
        "label": "Text Color1",
        "default": "#0fa3fa"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Label",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      }
	],
	"presets": [
      {
        "name": "Review Upsell"
      }
    ]
  }
{% endschema %}
