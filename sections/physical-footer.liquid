<div class="ai_ml_section_cnt {{ section.settings.classes }}" style="background-color:{{ section.settings.background-color }}">
	<div class="page-width ai_ml_inner_cnt"> 
     	
		<div class="py-content-with-title  ai_ml_align_center">
    		{% for block in section.blocks %}
    		  {% if block.type == 'py-content-with-title' %}                 
    					{% if block.settings.title != blank %}
    						<h1>{{ block.settings.title }}</h1>
    					{% endif %}	               
            			{% if block.settings.content != blank %}
    						<div class="ai_ml_cm_footer_content">{{ block.settings.content }}</div>
    					{% endif %}
    		  {% endif %}
    		{% endfor %}              
            {% if section.settings.phone != blank and section.settings.email != blank %}
                <div class="ai_ml_cm_footer_contacts ai_ml_align_center">
                    <span><a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></span> | <span><a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></span>
                </div>
            {% endif %}	                 
        </div>             
      <div class="py-footer-links ai_ml_align_center">
        <nav>
          <ul>
      		{% for block in section.blocks %}
    		  {% if block.type == 'py-footer-links' %} 
                  {% if block.settings.name != blank and block.settings.link != blank %}
                    <li><a href="{{ block.settings.link }}">{{ block.settings.name }}</a></li>    
                  {% endif %}	
    		  {% endif %}
    		{% endfor %} 
          </ul>          
        </nav>          
      </div>      
      <div class="ai_ml_clear"></div>					

    </div>    
			
</div>


{% schema %}
  {
    "name": "Physical Footer Section",  
    "tag": "section",
    "class": "ai_ml_section",
    "settings": [
      {
        "type": "color",
        "id": "background-color",
        "label": "Background Color"
      }, 
	  {
        "type": "text",
        "id": "classes",
        "label": "Classes"
      },
	  {
        "type": "text",
        "id": "phone",
        "label": "Phone",
        "default": "text"
      },
	  {
        "type": "text",
        "id": "email",
        "label": "Email",
        "default": "text"
      }      
    ],
    "blocks":[
      {
		"type":"py-content-with-title",
  	 	"name": "Content With Text",
     	 "settings": [
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "text"
      },
	  {
        "type": "richtext",
        "id": "content",
        "label": "Text",
        "default": "<p>text</p>"
      }	           
      ]
      },      
	  {
		"name": "Footer Links",
		 "type": "py-footer-links",
		"settings": [
		  {
			"type": "text",
			"id": "name",
			"label": "Name",
			"default": "text"
		  },  
		  {
			"type": "text",
			"id": "link",
			"label": "Link",
			"default": "text"
		  }          
		]
	  }     
  	],"presets": [
      {
        "name": "Physical Footer Section",
        "category": "PY Blocks"
      }
    ]
	}
{% endschema %}

